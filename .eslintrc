{
    "extends": "standard",

    "env": {
        "browser": true
    },
    "parser": "babel-eslint",
    "rules": {
        "indent": ["error", 4],
        "comma-dangle": ["error", "always-multiline"],
        "space-before-function-paren": ["error", "never"],
        "react/jsx-indent": ["error", 4],
        "react/jsx-indent-props": ["error", 4],
        "react/jsx-uses-vars": [2]
    },
    "plugins": [
        "standard", "promise", "import", "react"
    ]
}
